
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Create Test Case</title>

  <link rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
        integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />

  <link rel="stylesheet" href="/css/style.css" />
  <link rel="stylesheet" href="/css/nav.css" />

  <style>
    /* Page-specific form styling */
    .create-container {
      width: 100%;
      max-width: 500px;
      margin: 40px auto;
      background: white;
      padding: 25px;
      border-radius: 10px;
      box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }

    .create-container input,
    .create-container textarea {
      width: 100%;
      padding: 10px;
      margin-bottom: 15px;
      border-radius: 6px;
      border: 1px solid #ccc;
      font-size: 1rem;
    }

    .create-container button {
      width: 100%;
      padding: 10px;
      background-color: #2c3e50;
      color: white;
      border: none;
      border-radius: 6px;
      cursor: pointer;
      font-size: 1rem;
    }

    .create-container button:hover {
      background-color: #34495e;
    }

    .message {
      text-align: center;
      margin-top: 10px;
    }
  </style>
</head>

<body>
  <% const currentTest = typeof test !== 'undefined' ? test : {}; %>

  <div class="top-nav">
    <div class="top-left">
      <a href="/dashboard"><img src="/img/alphatest3.png" class="nav-logo" alt="Logo"></a>
      <h1 class="logo">Create a Test Case</h1>
    </div>
      <a href="/dashboard" class="nav-btn">Dashboard</a>
      <a href="/testcases" class="nav-btn">All Test Cases</a>
      <a href="/logout" class="nav-btn logout">Logout</a>
  </div>

  <div class="create-container">
    <h2>Create Test Case</h2>

    <form id="testcase-form">
      <input type="text" id="title" placeholder="Title" required />
      <textarea id="description" placeholder="Description" required></textarea>
      <label>Pre-conditions</label>
      <textarea name="preconditions"></textarea>
      <textarea id="steps" placeholder="Steps" required></textarea>
      <textarea id="expectedResult" placeholder="Expected Result" required></textarea>
      

      <label>Estimate (time or points)</label>
      <input type="text" name="estimate">
      <label>Type</label>
      <select name="type">
        <option value="functional">Functional</option>
        <option value="regression">Regression</option>
        <option value="smoke">Smoke</option>
        <option value="sanity">Sanity</option>
        <option value="exploratory">Exploratory</option>
        <option value="other">Other</option>
      </select>
      <label>Priority</label>
      <select name="priority">
        <option value="low">Low</option>
        <option value="medium">Medium</option>
        <option value="high">High</option>
        <option value="critical">Critical</option>
      </select>
      <hr>
      <label>Labels (comma separated)</label>
      <input type="text" name="labels[]">
    

      <div class="form-group">
        <label for="assignedTo">Assign To</label>
        <select id="assignedTo" name="assignedTo" class="form-control">
          <option value="">Unassigned</option>
          <% users.forEach(u => { %>
            <option value="<%= u._id %>"
              <%= currentTest.assignedTo && currentTest.assignedTo.equals(u._id) ? "selected" : "" %>>
              <%= u.local.username %>
            </option>
          <% }) %>
        </select>
        <button type="submit">Save Test Case</button>
      <p class="message" id="message"></p>
      </div>
    </form>
  </div>

  <script>
    const form = document.getElementById('testcase-form');
    const msg = document.getElementById('message');

    form.addEventListener('submit', async (e) => {
      e.preventDefault();

      const data = {
        title: document.getElementById('title').value,
        description: document.getElementById('description').value,
        steps: document.getElementById('steps').value,
        expectedResult: document.getElementById('expectedResult').value,
      };

      try {
        const res = await fetch('/api/testcases', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(data)
        });
        const json = await res.json();
        msg.textContent = json.message || 'Error saving test case';
        form.reset();
      } catch (err) {
        msg.textContent = 'Failed to connect to server';
      }
    });
  </script>

<footer class="site-footer">
  <p>© <%= new Date().getFullYear() %> AlphaTest — All Rights Reserved.</p>
</footer>


</body>
</html>
