<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Create Test Case</title>

  <link rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
        integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />

  <link rel="stylesheet" href="/css/style.css" />
  <link rel="stylesheet" href="/css/nav.css" />

  <style>
    /* Page-specific form styling */
    .create-container {
      width: 100%;
      max-width: 500px;
      margin: 40px auto;
      background: white;
      padding: 25px;
      border-radius: 10px;
      box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }

    .create-container input,
    .create-container textarea {
      width: 100%;
      padding: 10px;
      margin-bottom: 15px;
      border-radius: 6px;
      border: 1px solid #ccc;
      font-size: 1rem;
    }

    .create-container button {
      width: 100%;
      padding: 10px;
      background-color: #2c3e50;
      color: white;
      border: none;
      border-radius: 6px;
      cursor: pointer;
      font-size: 1rem;
    }

    .create-container button:hover {
      background-color: #34495e;
    }

    .message {
      text-align: center;
      margin-top: 10px;
    }
  </style>
</head>

<body>

  <!-- Top Navigation -->
  <div class="top-nav">
    <a href="/dashboard" class="nav-btn">Dashboard</a>
    <a href="/testcases" class="nav-btn">All Test Cases</a>
    <a href="/logout" class="nav-btn logout">Logout</a>
  </div>

  <!-- Form Container -->
  <div class="create-container">
    <h2>Create Test Case</h2>

    <form id="testcase-form">
      <input type="text" id="title" placeholder="Title" required />
      <textarea id="description" placeholder="Description" required></textarea>
      <textarea id="steps" placeholder="Steps" required></textarea>
      <textarea id="expectedResult" placeholder="Expected Result" required></textarea>

      <button type="submit">Save Test Case</button>
      <p class="message" id="message"></p>
    </form>
  </div>

  <script>
    const form = document.getElementById('testcase-form');
    const msg = document.getElementById('message');

    form.addEventListener('submit', async (e) => {
      e.preventDefault();

      const data = {
        title: document.getElementById('title').value,
        description: document.getElementById('description').value,
        steps: document.getElementById('steps').value,
        expectedResult: document.getElementById('expectedResult').value,
      };

      try {
        const res = await fetch('/api/testcases', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(data)
        });
        const json = await res.json();
        msg.textContent = json.message || 'Error saving test case';
        form.reset();
      } catch (err) {
        msg.textContent = 'Failed to connect to server';
      }
    });
  </script>

</body>
</html>
